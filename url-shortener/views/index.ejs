<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
  </head>
  <body>
    <div class="left-container"></div>
    <div class="right-container"></div>
    <h1>URL Shortener</h1>
    <form action="/shortUrls" method="POST">
      <label for="fullUrl">URL</label>
      <input type="url" name="fullUrl" id="fullUrl" />
      <button type="submit">Shrink</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Full URL</th>
          <th>Short URL</th>
          <th>Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(element => { %>
        <tr>
          <td><a href="<%= element.full %> "><%= element.full %></a></td>
          <td><a href="<%= element.short %>"><%= element.short %></a></td>
          <td><%= element.clicks %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    
  </body>
</html>
